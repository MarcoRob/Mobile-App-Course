<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.appwithdb.MenuActivity">


    <Button
        android:id="@+id/hobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/myhobby"
        android:layout_marginTop="38dp"
        android:onClick="myHobbyActivity"
        android:text="My Hobby" />

    <Button
        android:id="@+id/friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hobby"
        android:layout_marginTop="19dp"
        android:onClick="myFriendsHobbiesACt"
        android:text="Friends Hobbies" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Menu"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/myhobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:hint="My Hobby"
        android:textAlignment="textStart"
        android:textSize="18sp" />

</RelativeLayout>
